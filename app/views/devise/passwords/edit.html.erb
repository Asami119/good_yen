<div class="container">
  <div class="contents">
    <div class='flash-message'>
    <%= render "devise/shared/error_messages", resource: resource %>
    </div>
    <h5 class="align_center">パスワード再設定フォーム</h5>
    <div class="form_post">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <table class="form_set_width_max">
          <tbody>
            <tr>
              <%= f.hidden_field :reset_password_token %>
            </tr>
            <tr>
              <div class="field margin_top">
                <%= f.label :password, "新しいパスワード" %><br />
                <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder:"6文字以上の半角英数字" %>
              </div>
            </tr>
            <tr>
              <div class="field">
                <%= f.label :password_confirmation, "確認用" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"同じパスワードを入力" %>
              </div>
            </tr>
          </tbody>
        </table>
        <div class="actions margin_top">
          <%= f.submit "登録する", class: 'btn btn-default btn-outline-success' %>
        </div><br>
      <% end %>
    </div>
  </div>
</div>
