<div class="contents">
  <%= render partial: 'query', locals: { period: @period, querys: @querys } %>
  <div>
    <% if @posts.present? %>
      <%= bar_chart  @monthly_price_sums, options = {
        stacked: true,
        width: '800px',
        colors: ["#ACFF40", "#FFF33F"],
        thousands: ",", 
        suffix: "円",
        legend: "top"
      } %>
    <% end %>
    <%= @post_count %>件 | 合計：<%= @price_sum.to_s(:delimited) %>円 
    <% if @monthly_price_average.present? %>| 月平均：<%= @monthly_price_average.to_s(:delimited) %>円<% end %>
  </div>
</div>
