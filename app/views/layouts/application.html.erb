<!doctype html>
<html lang="ja">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <title>yen! | かんたん支出管理</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/4b4956428d.js" crossorigin="anonymous"></script>
  </head>
  <body>
    <header>
      <div class="heading">
        <a href="/">
          <%= image_tag 'yen-logo.png', alt: "Topページリンク", class: "header-logo" %>
        </a>
      </div>
      <div class="navbar">
        <ul class="nav-lists">
          <li>
            <%= link_to '記録する', new_post_path, class: "left-button nowrap" %>
          </li>
          <li>
            <%= link_to '振り返る', search_posts_path, class: "left-button nowrap"  %>
          </li>
        </ul>
        <ul class="nav-lists">
          <% if user_signed_in? %>
            <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "button-session nowrap" %></li>
          <% else %>
            <li><%= link_to 'ログイン', new_user_session_path, class: "button-session" %></li>
          <% end %>
        </ul>
      </div>
    </header>
    <%= yield %>
    <footer class="footer">
      <div class="yen-info">
        <b>yen! </b> by <a href="#">(＊検討・link:Twi/Git)Asami119</a>
      </div>
      <div class="footer-nav">
        <ul class="footer-nav-lists">
          <li>
            <a href="#" class="info-link">利用規約</a>
          </li>
          <li>
            <a href="#">プライバシーポリシー</a>
          </li>
        </ul>
      </div>
    </footer>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  </body>
</html>
